<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sign_in_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/sign_in_email_title" />

        <EditText
            android:id="@+id/sign_in_email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="#FFF"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/sign_in_password_title" />

        <EditText
            android:id="@+id/sign_in_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:background="#FFF"/>
    </LinearLayout>

    <Button
        android:id="@+id/sign_in_or_out_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/authentication_signin" />

    <Button
        android:id="@+id/signup_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sign_up"
        android:visibility="gone"/>

</LinearLayout>